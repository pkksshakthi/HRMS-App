<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="#ffffff" android:startColor="#ffffff" android:type="linear" /><!--For gradient background-->


                    <stroke android:width="1dp" android:color="#0D537B" />
                    <corners android:radius="0dp" /><!--For background corner-->

                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" /><!--For padding for all sides-->
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/icon_dropdown" />

            </item>
        </layer-list>
    </item>
</selector>