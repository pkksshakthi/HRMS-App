<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" />
                    <padding android:bottom="8dp" android:left="8dp" android:right="8dp" android:top="8dp"></padding>
                    <stroke android:width="0.5dp" android:color="#0D537B" />

                    <!--corners allow us to make the rounded corners button-->
                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="center|right" android:src="@drawable/icon_dropdown" />

            </item>
        </layer-list>
    </item>
</selector>