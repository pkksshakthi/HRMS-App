                    <stroke android:width="0.33dp" android:color="#0fb1fa" />

                    <corners android:radius="0dp" />

                    <padding android:bottom="@dimen/nav_header_vertical_spacing" android:left="@dimen/nav_header_vertical_spacing" android:right="@dimen/nav_header_vertical_spacing" android:top="@dimen/nav_header_vertical_spacing" />
