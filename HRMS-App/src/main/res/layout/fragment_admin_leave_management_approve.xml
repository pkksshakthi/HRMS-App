                                    android:textColor="#124A6B"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="COMPANY" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:padding="5dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="EMPLOYEE ID"
                                    android:textColor="#124A6B"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="COMPANY" />
                            </TableRow>


                        </TableLayout>
                    </android.support.v7.widget.CardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Employee Reason" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        card_view:cardElevation="5dp"

                        card_view:contentPadding="5dp">

                        <EditText
                            android:id="@+id/ed_emp_mess"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/leavemanagementtextviewroundcorner"
                            android:hint="N/A"
                            android:inputType="none" />
                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:id="@+id/ln_admin_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:text="Admin Reason" />

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:elevation="5dp"
                            card_view:cardElevation="5dp"

                            card_view:contentPadding="5dp">

                            <EditText
                                android:id="@+id/ed_admin_mess"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/leavemanagementtextviewroundcorner"
                                android:hint="N/A"
                                android:inputType="none" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ln_update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <Button
                            android:id="@+id/bt_update"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:layout_weight="1"
                            android:background="#1052A0"
                            android:text="Approve"
                            android:textColor="#ffffff" />

                        <Button
                            android:id="@+id/bt_cancel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:layout_weight="1"
                            android:background="#E33A3F"
                            android:text="Reject"
                            android:textColor="#ffffff" />
                    </LinearLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>

