<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6CB8F6"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="My Profile - DXN"
                android:textColor="#ffffff"
                android:textSize="10pt"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_user_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/tableLayout"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/icon_userinfo" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="#9594A6"
                android:padding="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_user_image">

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#D8DFF2"
                    android:orientation="vertical"
                    android:paddingBottom="1dp"
                    tools:layout_editor_absoluteX="192dp"
                    tools:layout_editor_absoluteY="219dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="User Information"
                        android:textColor="#03186A"

                        android:textSize="10pt"
                        android:textStyle="bold" />
                </LinearLayout>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"

                    android:background="#D8DFF2"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="Name : "
                        android:textColor="#0F1316" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="Sakthivel.p"
                        android:textColor="#0F1316" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#D8DFF2"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="EmployeeID : "

                        android:textColor="#0F1316" />

                    <TextView
                        android:id="@+id/tv_empid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="10481"
                        android:textColor="#0F1316" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#D8DFF2"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:paddingRight="10dp"
                        android:text="Company Name : "
                        android:textColor="#0F1316" />

                    <TextView
                        android:id="@+id/tv_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="Spinax info system"
                        android:textColor="#0F1316" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#D8DFF2"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="Branch : "

                        android:textColor="#0F1316" />

                    <TextView
                        android:id="@+id/tv_branch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="Software Development"
                        android:textColor="#0F1316" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#D8DFF2"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="Department : "

                        android:textColor="#0F1316" />

                    <TextView
                        android:id="@+id/tv_department"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="Software"
                        android:textColor="#0F1316" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#D8DFF2"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="Designation : "
                        android:textColor="#0F1316" />

                    <TextView
                        android:id="@+id/tv_designation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="Software Engineer"
                        android:textColor="#0F1316" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#D8DFF2"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="Mobile Number : "
                        android:textColor="#0F1316" />

                    <TextView
                        android:id="@+id/tv_mobile_no"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="+91 8012349993"
                        android:textColor="#0F1316" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#D8DFF2"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="Email : "
                        android:textColor="#0F1316" />

                    <TextView
                        android:id="@+id/tv_email_id"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="pkksshakthi@gmail.com"
                        android:textColor="#0F1316" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:background="#D8DFF2"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="left"
                        android:text="Address : "
                        android:textColor="#0F1316" />

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:inputType="textMultiLine"
                        android:maxLines="4"
                        android:lines="4"
                        android:singleLine="false"
                        android:text="Sphinax Info Systems No. 57,2nd floor, Mc Nichols Road, Chetpet,Chennai - 600031"
                        android:textColor="#0F1316" />
                </TableRow>

            </TableLayout>

        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
